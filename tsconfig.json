{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "cypress",
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["cypress","node"],
    "outDir": "dist",
    "paths": {
      "@local/shared": ["shared/*"],
      "@local/fixtures": ["fixtures/*"],
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "dist",
    "pageObj"
  ]
}